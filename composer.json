{
  "name": "furkanmeclis/laravel-paytr",
  "type": "library",
  "description": "Updated and Maintained Laravel Paytr Payment Gateway for Laravel 10, 11 & 12",
  "license": "MIT",
  "keywords": [
    "php",
    "laravel",
    "paytr",
    "payment",
    "gateway",
    "iframe",
    "iframe api",
    "direkt api",
    "havale api",
    "eft api",
    "laravel 10",
    "laravel 11",
    "laravel 12"
  ],
  "authors": [
    {
      "name": "Furkan Meclis",
      "email": "urkanmeclis@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "guzzlehttp/guzzle": "^7.0.1",
    "illuminate/collections": "^10.0|^11.0|^12.0",
    "illuminate/http": "^10.0|^11.0|^12.0",
    "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "autoload": {
    "psr-4": {
      "FurkanMeclis\\Paytr\\": "src/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "FurkanMeclis\\Paytr\\PaytrServiceProvider"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
